<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/settings_delete_all_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">


        <TextView
            android:id="@+id/settings_delete_all_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_more"
            android:layout_marginStart="@dimen/margin_start_end"
            android:textSize="@dimen/label_text_size_large"
            android:textColor="@color/text_danger"
            android:text="@string/settings_delete_all"/>

        <TextView
            android:id="@+id/settings_delete_all_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_below="@id/settings_delete_all_text_view"
            android:textColor="@color/text_danger_description"
            android:text="@string/settings_delete_all_description"/>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>