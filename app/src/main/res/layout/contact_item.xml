<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/contact_item_padding"
    android:layout_marginEnd="@dimen/contact_item_padding"
    android:layout_marginTop="@dimen/contact_item_padding">

    <RelativeLayout
        android:id="@+id/contact_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="?attr/cardBackgroundColor">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_profile_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/margin_top_more"
            android:layout_marginBottom="@dimen/margin_top_more"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end"
            android:contentDescription="@string/contact_add_edit_profile_image_description"
            android:src="@drawable/default_profile_1" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@id/contact_profile_image_view"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end"
            android:textSize="@dimen/label_text_size_large"
            android:textColor="?attr/textColor"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_centerVertical="true" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>